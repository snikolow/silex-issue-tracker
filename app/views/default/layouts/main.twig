<!DOCTYPE html>
<html{% if htmlClass is defined %} class="{{ htmlClass }}"{% endif %}>
    <head>
        <meta charset="UTF-8" />
        <title>{{ title | default('Issue Tracker') }}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/bootstrap/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/plugins/datepicker/datepicker3.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/plugins/select2/select2.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/plugins/iCheck/all.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/dist/css/AdminLTE.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/components/admin-lte/dist/css/skins/skin-blue.min.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/backend.css') }}"/>
        <script src="{{ asset('assets/components/admin-lte/plugins/jQuery/jQuery-2.1.4.min.js') }}"></script>
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
          <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="skin-blue fixed sidebar-mini">
        {{ widget('topNavigation') }}
        <div class="wrapper">
            {{ widget('sideNavigation') }}
            <aside class="right-side">
                <section class="content-header">
                    {{ widget('flashes' ) }}
                    {{ widget('breadcrumbs') }}
                    <div class="clearfix"></div>
                </section>
                <section class="content">
                    {% block content %}{% endblock %}
                </section>
            </aside>
        </div>
        <script src="{{ asset('assets/components/admin-lte/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/components/admin-lte/plugins/datepicker/bootstrap-datepicker.js') }}"></script>
        <script src="{{ asset('assets/components/admin-lte/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
        <script src="{{ asset('assets/components/admin-lte/plugins/select2/select2.min.js') }}"></script>
        <script src="{{ asset('assets/components/admin-lte/plugins/iCheck/icheck.min.js') }}"></script>
        <script src="{{ asset('assets/components/admin-lte/dist/js/app.js') }}"></script>
        <script src="{{ asset('assets/js/app/onLoad.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
