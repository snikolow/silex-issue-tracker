{% extends 'layouts/login.twig' %}

{% set htmlClass = 'bg-black' %}
{% set bodyClass = 'bg-black' %}

{% block content %}
    <div class="form-box" id="login-box">
        <div class="header">{{ 'title.signIn' | trans }}</div>
        <form action="{{ path('auth_check') }}" method="post">
            <div class="body bg-gray">
                {% if error is defined and error is not empty %}
                    <div class="callout callout-danger">
                        <p>{{ error }}</p>
                    </div>
                {% endif %}
                <div class="form-group">
                    <input type="text" name="_username" class="form-control" placeholder="{{ 'placeholders.email' | trans }}"/>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="{{ 'placeholders.password' | trans }}"/>
                </div>
            </div>
            <div class="footer">
                <button type="submit" class="btn bg-olive btn-block">{{ 'inputs.signIn' | trans }}</button>

                <p><a href="#">{{ 'title.forgotPassword' | trans }}</a></p>
            </div>
        </form>
    </div>
{% endblock %}
